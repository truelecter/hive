						remote-endpoint = <&vop_out_dsi1>;
					};
				};

				port@1 {
					reg = <1>;
					dsi1_out: endpoint {
						remote-endpoint = <&panel_in>;
					};
				};
			};

			panel {
				compatible = "your-panel-compatible-string";
				// Add panel-specific properties here
			};
			*/
		};
	};

	fragment@1 {
		target = <&display_subsystem>;

		__overlay__ {
			route {
				route_dsi1: route-dsi1 {
					status = "okay";
					logo,uboot = "logo.bmp";
					logo,kernel = "logo_kernel.bmp";
					logo,mode = "center";
					charge_logo,mode = "center";
					connect = <&dsi1_out>;
				};
			};
		};
	};

	fragment@2 {
		target = <&dsi_dphy1>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target = <&vop>;
		__overlay__ {
			ports {
				/* Assuming vp1 (port@1) for DSI1; adjust if needed */
				port@1 {
					vp1_out_dsi1: endpoint@1 {
						remote-endpoint = <&dsi1_in>;
					};
				};
			};
		};
	};

	fragment@4 {
		target = <&cpu0_opp_table>;
		__overlay__ {
			opp-408000000 {
				opp-microvolt = <850000 850000 1150000>; /* Match dt.dts */
			};
			opp-600000000 {
				opp-microvolt = <850000 850000 1150000>;
			};
			opp-816000000 {
				opp-microvolt = <850000 850000 1150000>;
			};
			opp-1104000000 {
				opp-microvolt = <900000 900000 1150000>;
			};
			opp-1416000000 {
				opp-microvolt = <1025000 1025000 1150000>;
			};
			opp-1608000000 {
				opp-microvolt = <1100000 1100000 1150000>;
			};
			opp-1800000000 {
				opp-microvolt = <1150000 1150000 1150000>;
			};
		};
	};
};